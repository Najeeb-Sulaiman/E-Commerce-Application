@model DrinkAndGo.Data.Models.Drink

<div class="col-sm-12 col-lg-12 col-md-12">
    <div class="thumbnail">
        <img class="card-img-top" src="@Model.ImageThumbnailUrl" style="width:300px; height:200px" alt="" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h1>
                <strong class="text-primary">@Model.Name</strong>
            </h1>
            <p> <strong>@Model.ShortDescription</strong></p>
            <br />
            <p>@Model.LongDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-drinkId="@Model.DrinkId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>